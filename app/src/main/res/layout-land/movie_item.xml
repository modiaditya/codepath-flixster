<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:padding="12dp"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="0dp"
        android:layout_weight="1.75"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/poster_image"
            android:layout_gravity="center_vertical"
            android:background="@drawable/grey_gradient"
            android:layout_width="match_parent"
            android:layout_height="@dimen/poster_image_height"
            android:layout_weight="2"
            android:scaleType="centerInside"
            tools:src="@drawable/ic_video"
            />

        <ImageView
            android:id="@+id/play_button"
            android:src="@drawable/ic_video_play"
            android:layout_width="match_parent"
            android:layout_height="@dimen/poster_image_height"
            android:scaleType="center"
            />

    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="12dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textAppearance="?android:textAppearanceLarge"
            tools:text="Lion"/>

        <TextView
            android:id="@+id/overview_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="A five-year-old Indian boy gets lost on the streets of Calcutta, thousands of kilometers from home. He survives many challenges before being adopted by a couple in Australia; 25 years later, he sets out to find his lost family."/>

    </LinearLayout>

</LinearLayout>